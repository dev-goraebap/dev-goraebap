<!DOCTYPE html>
<html lang="ko" data-theme="{{currentTheme() || 'light'}}">

<head>
  @!partials.head({ title, description })
  @if ($slots.meta)
    {{{ await $slots.meta() }}}
  @endif
</head>

<body data-controller="modal">
  <div class="drawer lg:drawer-open">
    <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col min-w-3xl">
      <!-- Navbar -->
      <header class="navbar bg-base-100/80 backdrop-blur-sm p-3 w-full sticky top-0 z-10">
        <div class="flex-none lg:hidden">
          <label for="my-drawer-3" aria-label="open sidebar" class="btn btn-square btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
              class="inline-block h-6 w-6 stroke-current">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </label>
        </div>
        <div class="flex-1 flex items-center gap-4 mx-2 px-2">
          <h2 class="text-2xl">
            {{ adminTitle || '데브고래밥 블로그' }}
          </h2>
        </div>
        <div class="hidden flex-none lg:block">
          @!partials.themeDropbox()
        </div>
      </header>
      <!-- Page content here -->
      <div class="max-w-[1980px] grow p-6">
        {{{ await $slots.main() }}}
      </div>
    </div>
    <div class="drawer-side z-20">
      <label for="my-drawer-3" aria-label="close sidebar" class="drawer-overlay"></label>
      @!layout.admin.sidebar()
    </div>
  </div>

  @!uikit.modal()

  @uikit.toast()
  @!uikit.flash()
  @end
</body>

</html>