<div id="tagListTurboStreamTarget" class="flex flex-wrap gap-2">
  @each(tag in tags)
    <button
      class="badge cursor-pointer text-xs {{ query('tag') === tag?.name ? 'badge-primary': 'badge-ghost' }}"
      data-action="feed-query#onFilterTag"
      data-value="{{ tag?.name }}"
    >
      {{ tag?.name }}

      <span class="text-[10px]">{{ tag?.postCount }}</span>
    </button>
  @end
</div>
