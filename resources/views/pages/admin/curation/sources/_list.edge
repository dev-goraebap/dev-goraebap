@if(sources.length === 0)
  <div class="flex flex-col items-center justify-center py-20 text-base-content/50">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-16 mb-4">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
    </svg>
    <p>등록된 RSS 소스가 없습니다.</p>
  </div>
@else
  <div class="overflow-x-auto">
    <table class="table table-zebra">
      <thead>
        <tr>
          <th>#</th>
          <th>소스명</th>
          <th>URL</th>
          <th>항목 수</th>
          <th>상태</th>
          <th>등록일</th>
          <th>관리</th>
        </tr>
      </thead>
      <tbody>
        @each((source, index) in sources)
          <tr>
            <th>{{ index + 1 }}</th>
            <td>
              <span class="font-semibold">{{ source.name }}</span>
            </td>
            <td>
              <a href="{{ source.url }}" target="_blank" class="link link-hover text-xs truncate max-w-xs block">
                {{ source.url }}
              </a>
            </td>
            <td>
              <span class="badge badge-info badge-sm">{{ source.itemCount }}</span>
            </td>
            <td>
              @if(source.isActiveYn === 'Y')
                <span class="badge badge-success badge-sm">활성</span>
              @else
                <span class="badge badge-ghost badge-sm">비활성</span>
              @end
            </td>
            <td class="text-xs">
              {{ formatDate(source.createdAt, '/', true) }}
            </td>
            <td>
              <div class="flex gap-1">
                {{-- 취합 버튼 --}}
                <form action="/admin/curation/sources/{{ source.id }}/fetch" method="POST" class="inline">
                  <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
                  <button type="submit" class="tooltip p-1 cursor-pointer" data-tip="RSS 취합">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-primary">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
                    </svg>
                  </button>
                </form>

                {{-- 활성화 토글 버튼 --}}
                <a
                  href="/admin/curation/sources/{{ source.id }}/toggle"
                  data-turbo-method="PUT"
                  class="tooltip p-1 cursor-pointer"
                  data-tip="{{ source.isActiveYn === 'Y' ? '비활성화' : '활성화' }}"
                >
                  @if(source.isActiveYn === 'Y')
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-success">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                  @else
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-base-content/30">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                  @end
                </a>

                {{-- 수정 버튼 --}}
                <button class="tooltip p-1 cursor-pointer" data-action="modal#onOpen" data-content-url="/admin/curation/sources/{{ source.id }}/edit" data-tip="수정">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                  </svg>
                </button>

                {{-- 삭제 버튼 --}}
                <a
                  href="/admin/curation/sources/{{ source.id }}"
                  data-turbo-method="DELETE"
                  data-turbo-confirm="정말 삭제하시겠어요? 관련된 모든 항목도 삭제됩니다."
                  class="tooltip p-1 cursor-pointer"
                  data-tip="삭제"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-error">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                </a>
              </div>
            </td>
          </tr>
        @end
      </tbody>
    </table>
  </div>
@end
