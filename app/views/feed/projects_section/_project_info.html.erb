<% project = local_assigns[:project] %>

<div class="relative w-full h-full">
  <div data-carousel-target="projectInfoEl">
    <!-- 프로젝트 태그 -->
    <div 
      data-carousel-target="tagsEl"
      class="flex gap-2 mb-4 project-tags">
      <% project[:tags].each do |tag| %>
        <span 
          class="inline-block px-3 py-1 text-xs font-semibold rounded-full"
          style="background-color: var(<%= tag[:bg_color] %>);
                color: var(<%= tag[:text_color] %>);">
          <%= tag[:name] %>
        </span>
      <% end %>
    </div>
    
    <!-- 프로젝트명 -->
    <h3 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-4 tracking-tight project-title">
      <span data-carousel-target="title"><%= project[:title] %></span>
    </h3>
    
    <!-- 간단한 설명 -->
    <p
      data-carousel-target="description"
      class="text-base sm:text-lg text-gray-600 mb-6 project-description">
      <%= project[:description] %>
    </p>
    
    <!-- 주요 기능 리스트 -->
    <div class="mb-8">
      <h4 class="text-lg font-semibold text-gray-800 mb-2">주요 기능</h4>
      <ul
        data-carousel-target="featuresEl" 
        class="space-y-2 project-features">
        <% project[:features].each do |feature| %>
          <li class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 
                  7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-600"><%= feature %></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  
  <!-- 버튼 -->
  <div class="flex gap-3">
    <a
      data-carousel-target="linkEl" 
      href="/projects/<%= project[:id] %>" 
        class="project-link inline-flex items-center justify-center bg-primary hover:bg-primary/90 
              text-white px-5 py-2.5 rounded-lg gap-2 transition shadow-md hover:shadow-lg">
      <span>자세히 보기</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
          d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </a>
    <a href="/projects" class="inline-flex items-center justify-center border border-gray-200 text-gray-800 
        hover:border-primary hover:text-primary px-5 py-2.5 rounded-lg gap-2 transition 
      bg-white/50 hover:shadow-md">
      <span>모든 프로젝트</span>
    </a>
  </div>
</div>