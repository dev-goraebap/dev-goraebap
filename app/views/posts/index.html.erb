<%= render 'shared/header', class: 'bg-amber-50' %>

<!-- 게시물 목록 페이지 -->
<div class="flex flex-col items-center relative px-4 sm:py-10 bg-amber-50 min-h-screen">
  <div class="w-full max-w-4xl mx-auto">
    <!-- 페이지 헤더 -->
    <div class="relative z-10 mb-10">
      <div class="text-2xl sm:text-4xl">
        기술 블로그
      </div>
      
      <!-- 검색 및 필터링 섹션 -->
      <div class="flex flex-col sm:flex-row sm:items-center gap-4 mt-8">
        <!-- 검색 바 -->
        <div class="relative flex-grow">
          <input 
            type="text" 
            placeholder="블로그 글 검색하기" 
            class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary/30 focus:border-primary 
            transition-all bg-white/80 backdrop-blur-sm text-gray-800 pr-10" />
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 absolute right-3 top-1/2 transform -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        
        <!-- 정렬 옵션 -->
        <div class="flex items-center gap-2 text-sm whitespace-nowrap">
          <span class="text-gray-600">정렬:</span>
          <a href="?sort=popular" class="px-3 py-1.5 bg-primary text-white font-medium rounded-md">인기순</a>
          <a href="?sort=recent" class="px-3 py-1.5 bg-white/80 text-gray-700 hover:bg-primary/10 font-medium rounded-md transition-colors">최신순</a>
          <a href="?sort=oldest" class="px-3 py-1.5 bg-white/80 text-gray-700 hover:bg-primary/10 font-medium rounded-md transition-colors">오래된순</a>
        </div>
      </div>
    </div>
    
    <!-- 배경 장식 요소들 - 낮은 z-index 적용 -->
    <div class="absolute top-10 left-5 sm:left-10 w-16 sm:w-24 h-16 sm:h-24 rounded-full bg-pink-200/30 blur-md z-0"></div>
    <div class="absolute top-40 right-10 sm:right-20 w-20 sm:w-32 h-20 sm:h-32 rounded-full bg-blue-200/30 blur-md z-0"></div>
    <div class="absolute bottom-40 left-10 sm:left-1/4 w-16 sm:w-32 h-16 sm:h-32 rounded-full bg-purple-200/20 blur-md z-0"></div>

    <!-- 게시물 목록 -->
    <div class="relative z-10">
      <!-- 게시물 목록 - 그리드 형태 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <% @posts.each do |post| %>
          <%= render 'card', post: post %>
        <% end %>
      </div>

      <!-- 페이지네이션 (하단 네비게이션) -->
      <div class="flex justify-center items-center mt-12 mb-16">
        <nav class="flex items-center space-x-1 border border-gray-200 rounded-lg backdrop-blur-sm p-1">
          <!-- 이전 페이지 버튼 -->
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 hover:text-gray-800 hover:bg-gray-100/70 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span class="sr-only">이전</span>
          </a>
          
          <!-- 페이지 숫자 버튼들 -->
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-md bg-primary text-white font-medium text-sm">
            1
          </a>
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-md text-gray-700 hover:bg-gray-100/70 transition-colors font-medium text-sm">
            2
          </a>
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-md text-gray-700 hover:bg-gray-100/70 transition-colors font-medium text-sm">
            3
          </a>
          <span class="w-8 h-8 flex items-center justify-center text-gray-400 text-sm">
            ...
          </span>
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-md text-gray-700 hover:bg-gray-100/70 transition-colors font-medium text-sm">
            15
          </a>
          
          <!-- 다음 페이지 버튼 -->
          <a href="#" class="w-8 h-8 flex items-center justify-center rounded-md text-gray-500 hover:text-gray-800 hover:bg-gray-100/70 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span class="sr-only">다음</span>
          </a>
        </nav>
      </div>
    </div>
  </div>
</div>

<!-- 블로그 섹션과 푸터 사이 그라데이션 전환 -->
<div class="hidden sm:block w-full h-32 bg-gradient-to-b from-amber-50 to-red-50"></div>
