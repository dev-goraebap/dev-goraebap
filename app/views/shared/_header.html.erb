<div id="headerContainer" class="<%= local_assigns[:class] || '' %> w-full flex justify-center z-50">
  <header class="w-full max-w-5xl flex p-4 justify-center sm:justify-between items-center z-50">
    <figure class="motion-custom-focus-in">
      <a href="/" class="flex items-center gap-2">
        <img src="<%= asset_url 'dev-goraebap.png' %>" class="h-16"/>
        <span class="font-bold flex flex-col">
          <span class="-mb-2">데브고래밥</span>
