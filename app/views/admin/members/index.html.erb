<div class="flex flex-col gap-2">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">멤버 관리</h1>
    <%= link_to "새 멤버 추가", new_admin_member_path, 
        class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition",
        data: { turbo_frame: "modal" } %>
  </div>
  
  <!-- 플래시 메시지 컨테이너 -->
  <turbo-frame id="flash_messages">
    <% if notice %>
      <%= render "shared/flash", type: "success", message: notice %>
    <% end %>
    <% if alert %>
      <%= render "shared/flash", type: "error", message: alert %>
    <% end %>
  </turbo-frame>
  
  <!-- 멤버 검색 및 필터 -->
  <%= render "search_filter", filters: @filters %>
  
  <!-- 멤버 목록 테이블 -->
  <%= render "members_list", members: @members %>
  
  <!-- 페이지네이션 -->
  <%= render "pagination", pagination: @pagination, filters: @filters %>
</div>