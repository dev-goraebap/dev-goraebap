<turbo-frame id="members_list">
  <div class="overflow-hidden bg-white shadow-sm rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">프로필</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">닉네임</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">역할</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">링크</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">관리</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if members.any? %>
          <% members.each do |member| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= member.id %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="h-10 w-10 rounded-full overflow-hidden bg-gray-100 flex items-center justify-center">
                  <% if member.thumbnail.attached? %>
                    <%= image_tag member.thumbnail, class: "h-full w-full object-cover" %>
                  <% else %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= member.nickname %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                  <%= case member.role
                      when 'developer' then 'bg-blue-100 text-blue-800'
                      when 'designer' then 'bg-purple-100 text-purple-800'
                      when 'planner' then 'bg-green-100 text-green-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= member.role == 'developer' ? '개발자' : 
                      member.role == 'designer' ? '디자이너' : 
                      member.role == 'planner' ? '기획자' : member.role %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if member.link.present? %>
                  <a href="<%= member.link %>" target="_blank" class="text-blue-600 hover:text-blue-900">
                    <%= member.link.truncate(30) %>
                  </a>
                <% else %>
                  -
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end space-x-2">
                  <%= link_to "수정", edit_admin_member_path(member), class: "text-indigo-600 hover:text-indigo-900", data: { turbo_frame: "modal" } %>
                  <%= button_to "삭제", admin_member_path(member), method: :delete, class: "text-red-600 hover:text-red-900", form: { data: { turbo_confirm: "정말로 이 멤버를 삭제하시겠습니까?" } } %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">등록된 멤버가 없습니다.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</turbo-frame>