<div class="px-4 py-3 bg-white border-t border-gray-200 rounded-b-lg mt-0 flex items-center justify-between shadow-sm">
  <div class="text-sm text-gray-700">
    총 <span class="font-medium"><%= pagination[:total_count] %></span>명 중
    <span class="font-medium"><%= ((pagination[:current_page] - 1) * pagination[:per_page]) + 1 %></span>-
    <span class="font-medium"><%= [pagination[:current_page] * pagination[:per_page], pagination[:total_count]].min %></span>명 표시
  </div>

  <div class="flex space-x-2">
    <% if pagination[:has_prev_page] %>
      <%= link_to admin_members_path(
          keyword: filters[:keyword],
          sort_by: filters[:sort_by],
          sort_direction: filters[:sort_direction],
          per_page: filters[:per_page],
          page: pagination[:current_page] - 1
        ),
        class: "px-3 py-1 border border-gray-300 rounded-md bg-white text-sm hover:bg-gray-50",
        data: { turbo_frame: "members_list" } do %>
        이전
      <% end %>
    <% else %>
      <span class="px-3 py-1 border border-gray-200 rounded-md bg-gray-100 text-sm text-gray-400 cursor-not-allowed">이전</span>
    <% end %>

    <% (1..pagination[:total_pages]).each do |page_num| %>
      <% if page_num == pagination[:current_page] %>
        <span class="px-3 py-1 border border-blue-500 rounded-md bg-blue-500 text-white text-sm"><%= page_num %></span>
      <% else %>
        <%= link_to page_num, admin_members_path(
            keyword: filters[:keyword],
            sort_by: filters[:sort_by],
            sort_direction: filters[:sort_direction],
            per_page: filters[:per_page],
            page: page_num
          ),
          class: "px-3 py-1 border border-gray-300 rounded-md bg-white text-sm hover:bg-gray-50",
          data: { turbo_frame: "members_list" } %>
      <% end %>
    <% end %>

    <% if pagination[:has_next_page] %>
      <%= link_to admin_members_path(
          keyword: filters[:keyword],
          sort_by: filters[:sort_by],
          sort_direction: filters[:sort_direction],
          per_page: filters[:per_page],
          page: pagination[:current_page] + 1
        ),
        class: "px-3 py-1 border border-gray-300 rounded-md bg-white text-sm hover:bg-gray-50",
        data: { turbo_frame: "members_list" } do %>
        다음
      <% end %>
    <% else %>
      <span class="px-3 py-1 border border-gray-200 rounded-md bg-gray-100 text-sm text-gray-400 cursor-not-allowed">다음</span>
    <% end %>
  </div>
</div>